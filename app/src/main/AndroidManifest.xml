<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.finalprojectlab2">
    <!--
         The ACCESS_COARSE/FINE_LOCATION permissions are not required to use
         Google Maps Android API v2, but you must specify either coarse or fine
         location permissions for the 'MyLocation' functionality.
    -->
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />

    <application
        android:allowBackup="true"
        android:hardwareAccelerated="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar"
        android:windowSoftInputMode="adjustPan">
        <activity android:name=".Activity.MostItemReting"></activity>
        <activity android:name=".Activity.MostItemSelling"></activity>
        <activity android:name=".Activity.ChangePasswordActvitiy"></activity>

        <activity android:name=".Activity.EditCatalog" />

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />

        <activity android:name=".Activity.SearchActivty" />
        <activity android:name=".Activity.CatalogItem" />
        <activity android:name=".Activity.ProdcutAndCatalog.EditItem" />
        <activity
            android:name=".Activity.MapsActivity"
            android:label="@string/title_activity_maps" />
        <activity android:name=".Activity.EditProfile" />
        <activity android:name=".Activity.ItemDetailsActivity" />
        <activity android:name=".Activity.ProdcutAndCatalog.AddCatalog" />
        <activity android:name=".Activity.ProdcutAndCatalog.AddProductActivity" />
        <activity android:name=".Activity.ProdcutAndCatalog.AddSwitch" />
        <activity android:name=".Activity.Login.StartActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Activity.Login.ResetPasswordActivity" />
        <activity android:name=".Activity.Login.LoginActivity" />
        <activity android:name=".Activity.Login.RegisterActivity" />
        <activity
            android:name=".Activity.MainActivity"
            android:theme="@style/CustomActionBar"
            android:windowSoftInputMode="adjustPan" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>