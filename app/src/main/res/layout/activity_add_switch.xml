<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.ProdcutAndCatalog.AddSwitch">

    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="74dp"
        android:background="#F9F9F9"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/backbtn"
            android:layout_width="48dp"
            android:layout_height="58dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_gravity="right"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:padding="4dp"

            android:src="@drawable/ic_armo" />

        <Space
            android:layout_width="50dp"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingLeft="@dimen/medium"
            android:text="Item Deitelees"
            android:textColor="#000000"
            android:textSize="24dp"

            />

        <Space
            android:layout_width="60dp"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/ic_mene"
            android:layout_width="45dp"
            android:layout_height="55dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_gravity="left"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:paddingRight="10dp"
            android:src="@drawable/ic_mene" />

    </LinearLayout>

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/anamtin"
        android:layout_width="419dp"
        android:layout_height="364dp"
        android:layout_marginTop="86dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:lottie_autoPlay="true"
        app:lottie_fileName="add.json"
        app:lottie_loop="true" />

    <RelativeLayout
        android:id="@+id/btnAddProdcut"
        android:layout_width="286dp"
        android:layout_height="50dp"
        android:layout_marginBottom="44dp"
        android:background="@drawable/bag_circularborderbtn"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        app:layout_constraintBottom_toTopOf="@+id/btnAddCatalog"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="@android:color/transparent"
            android:fontFamily="@font/ralewayregular"
            android:paddingTop="10dp"
            android:text="@string/add_Prodcut"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:textStyle="bold" />


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/btnAddCatalog"
        android:layout_width="286dp"
        android:layout_height="50dp"
        android:layout_marginBottom="68dp"
        android:background="@drawable/bag_circularborderbtn"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="@android:color/transparent"
            android:fontFamily="@font/ralewayregular"
            android:paddingTop="10dp"
            android:text="@string/add_Catalog"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:textStyle="bold" />

    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>